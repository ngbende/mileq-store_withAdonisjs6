<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Connexion — Admin</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Petites animations -->
  <style>
    .fade-in { animation: fadeIn .6s ease-in-out; }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body class="bg-gray-100">

  <!-- CONTAINER -->
  <div class="min-h-screen flex items-center justify-center px-4">

    <div class="bg-white w-full max-w-md p-8 rounded-2xl shadow-lg fade-in">

      <h1 class="text-2xl font-extrabold text-center mb-6 text-gray-800">
        Connexion Administrateur
      </h1>

      <!-- MESSAGE D’ERREUR -->
      @if (flashMessages.get('error'))
      <div class="bg-red-100 text-red-600 px-4 py-2 rounded mb-4 text-sm">
        {{ flashMessages.get('error') }}
      </div>
      @endif

      <!-- FORMULAIRE -->
      <form action="{{ route('admin.login') }}" method="POST" class="space-y-5">
      {{ csrfField() }}
        <!-- Email -->
        <div class="flex flex-col">
          <label class="font-medium text-gray-700 mb-1">Email</label>
          <input 
            type="email" 
            name="email"
            required
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
            placeholder="admin@example.com"
          >
        </div>

        <!-- Password -->
        <div class="flex flex-col">
          <label class="font-medium text-gray-700 mb-1">Mot de passe</label>
          <input 
            type="password" 
            name="password"
            required
            class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none"
            placeholder="••••••••"
          >
        </div>

        <!-- SUBMIT BUTTON -->
        <button 
          type="submit"
          class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold shadow hover:bg-blue-700 transition"
        >
          Se connecter
        </button>

      </form>

      <!-- Back to home -->
      <p class="text-center text-sm text-gray-600 mt-6">
        <a href="/" class="text-blue-600 hover:underline">
          ← Retour à l'accueil
        </a>
      </p>

    </div>
  </div>

</body>
</html>
